{
  "name": "infrastructure-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "supabase:start": "supabase start  --workdir ./lib",
    "supabase:stop": "supabase stop --workdir ./lib",
    "supabase:db:reset": "supabase db reset --workdir ./lib",
    "supabase:db:diff": "supabase db diff --workdir ./lib",
    "test:unit": "jest app",
    "test:acceptance": "npx playwright test",
    "test:acceptance:api": "export DRIVER=api && npm run test:acceptance -- --project=chromium",
    "test:acceptance:web": "export DRIVER=web && npm run test:acceptance",
    "test:acceptance:ui": "export DRIVER=web && npm run test:acceptance -- --ui",
    "pre-commit": "next lint && npm run prettier && npm run test:unit && npm run test:acceptance:api && npm run test:acceptance:web",
    "test:flakiness-check": "npm run pre-commit && npm run pre-commit && npm run pre-commit"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-navigation-menu": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.46.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "next": "^15.1.2",
    "pino": "^9.6.0",
    "pino-pretty": "^10.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "dotenv": "^16.4.5",
    "eslint": "^8",
    "eslint-config-next": "15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "postcss": "^8",
    "prettier": "3.4.2",
    "supabase": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5"
  }
}
